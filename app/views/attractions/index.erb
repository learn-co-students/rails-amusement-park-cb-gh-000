 <h1>Listing attractions</h1>

  <table>
    <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <tr>
      <td><strong>Picture</strong></td>
      <td><strong>Name</strong></td>
      <td><strong>Tickets</strong></td>
      <td><strong>Details</strong></td>
    </tr>
    <% @attractions.each do |attr| %>
      <tr>
        <td><img src="http://www.allthingsclipart.com/05/amusement.park.05.jpg" width="100"></td>
        <td><%= attr.name %></td>
        <td><%= attr.tickets%></td>
        <td><%= link_to "Go on #{attr.name}", attraction_path(attr)  unless current_user.admin %></td>
        <td><%= link_to "Show #{attr.name}", attraction_path(attr)  if current_user.admin %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>

  <p><a href="/attractions/new">New Attraction</a></p>
