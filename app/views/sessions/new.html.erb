<h1>Welcome to the Amusement Park!</h1>
<%= link_to "Sign In", signin_path %>
<%= link_to "Sign Up", new_user_path %>

<%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

  <div class="field">
    <%= f.label :name, "Select your name" %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :password, "Enter your name" %><br>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Sign In"  %>
  </div>
<% end %>
