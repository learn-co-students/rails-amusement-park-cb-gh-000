<% if @message %>
  <p><%= @message.inspect %></p>
<% end %>

<div>
  <% if @user.admin %>
    <h4>ADMIN</h4>
  <% end %>
  <p><strong>Name: </strong><%= @user.name %></p>
  <p><strong>Total Number of Rides: </strong><%= @user.rides.count %></p>
  <p><strong>Tickets: </strong><%= @user.tickets %></p>
  <p><strong>Height: </strong><%= @user.height %> inches</p>
  <p><strong>Mood: </strong><%= @user.mood %></p>
  <%= link_to "See attractions", attractions_path %><br><br>
  <%= link_to "Edit", edit_user_path(@user) %>
</div>
